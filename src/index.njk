    </div>
  </section>

  <section class="invert">
    <div class="[ max-width-80 ]">
      <h2>
        <a  href=" /journal/">Latest journal entries</a>
      </h2>

      {% set postslist = collections.posts | previewCollection(3) %}
      {% include "postsList.njk" %}
    </div>
  </section>

  <section>
    <div class="[ max-width-80 ]">
      <h2>
        <a href="/photos/">Latest photos</a>
      </h2>

      {% set photoslist = collections.photos | previewCollection(4) %}
      {% include "photoPreview.njk" %}
    </div>
  </section>

{% endblock %}