---
pagination:
  data: collections.allSocial
  size: 1
  alias: post
permalink: /journal/notes/{{ post.date | noteTimestamp }}/
---

{% extends 'layouts/base.njk' %}

{% block content %}
  <article class="max-width-90">

    <h1>{{post.date | noteTitle}}</h1>
    <div class="social-card note">
      <img class="social-image" src="/img/meta_square.webp" alt="Declan's Twitter avatar" height="60" width="60">
      <div>
        {% include "partials/socialPost.njk" %}
        <a class="notes-back" href="/journal/notes/">&larr; Back to notes</a>
      </div>
    </div>
  </article>
{% endblock %}