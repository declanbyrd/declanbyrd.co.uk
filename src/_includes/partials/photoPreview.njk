<ul class="[ autofit-grid ] [ photos ]">
  {% for item in photoslist %}
    <li>
      <a href="{{item.url}}">
        {% image item.data.photo[0].url, item.data.photo[0].alt, "[ photo-item ]" %}
        {% if item.data.photo.length > 1 %}
          <svg width="30" height="30" role="img" aria-labelledby="photos-from-{{item.date | htmlDateTime}}-title" focusable="false"
        class="[ gallery-icon ]">
            <title id="photos-from-{{item.date | htmlDateTime}}-title">Multiple photos for {{item.data.date | readableDates}}
            </title>
            <use href="/assets/icons/icons.svg#gallery"></use>
          </svg>
        {% endif %}
        <span class="[ visually-hidden ]">View the photos from {{item.data.date | readableDates}}</span>
      </a>
    </li>
  {% endfor %}
</ul>