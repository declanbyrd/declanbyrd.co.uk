<li>
  <h3>
    <a href="{{ post.url | url }}">
      {{ post.data.title }}
    </a>
  </h3>
  <time datetime="{{ post.date | htmlDateTime }}" class="[ date ]">
    {{ post.date | readableDates }}
  </time>
  <ul class="[ horizontal-list ]">
    {% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
        <li class="[ tag ]">
          <a href="{{ tagUrl | url }}" class="p-category [ hover-link ]">
            <span class="accent">#</span>{{ tag }}</a>
        </li>
      {%- endif -%}
    {% endfor %}
  </ul>

  <p>{{post.data.description}}</p>
</li>