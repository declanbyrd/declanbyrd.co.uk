<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="icon" type="image/svg+xml" href="/assets/icons/favicon.svg">
    <link rel="alternate icon" href="/assets/icons/favicon.png">
    <link rel="preload" as="font" type="font/woff2" crossorigin="" href="/assets/fonts/bungee.woff2">
    <link rel="preload" as="font" type="font/woff" crossorigin="" href="/assets/fonts/bungee.woff">
    <title>{{renderData.title or title or metadata.title}}</title>
    <meta name="Description" content="{{renderData.description or description or metadata.description}}"/>
    <meta property="og:site_name" content="declanbyrd.co.uk">
    <meta name="og:description" content="{{renderData.description or description or metadata.description}}">
    <meta property="og:title" content="{{renderData.title or title or metadata.title}}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{metadata.url}}{{page.url}}">
    <meta property="og:image" content="https://www.declanbyrd.co.uk/img/meta.jpg">
    <meta property="og:image:alt" content="Photo of Declan Byrd">
    <meta name="twitter:creator" content="@declan_byrd">
    <meta name="twitter:description" content="{{renderData.description or description or metadata.description}}">
    <meta name="twitter:image" content="https://www.declanbyrd.co.uk/img/meta.jpg">
    <meta name="twitter:image:alt" content="Photo of Declan Byrd">
    <link rel="webmention" href="https://webmention.io/declanbyrd.co.uk/webmention"/>
    <link rel="pingback" href="https://webmention.io/declanbyrd.co.uk/xmlrpc"/>
    <link rel="self" title="All posts" type="application/atom+xml" href="/feed.xml">
    <link rel="alternate" title="Journal posts" type="application/atom+xml" href="/journal/feed.xml">
    <link rel="alternate" title="Weekly notes" type="application/atom+xml" href="/week-notes/feed.xml">
    <link rel="manifest" href="/assets/site.webmanifest">
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#f9f9fe">
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#1a1a1a">

    {% set css %}
    {% include "css/styles.css" %}
    {% endset %}
    <style>
      {{css | cssmin | safe}}
    </style>
    {% block stylesheets %}
      {{ content | safe }}
    {% endblock %}
    <script>
      const theme = localStorage.getItem("user-color-scheme");
      if (theme) {
        document
          .documentElement
          .setAttribute('data-user-color-scheme', theme);
      }
    </script>
  </head>
  <body>
    <a class="[ skip-link ]" href="#mainContent">Skip to content</a>
    <header>
      {% if '/' !== page.url %}
        {% include 'partials/siteLogo.njk' %}
      {% endif %}
      {% include 'partials/navigation.njk' %}
    </header>

    <main tabindex="-1" id="mainContent">
      {% block content %}
        {{ content | safe }}
      {% endblock %}
    </main>

    <footer>
      {% include 'partials/footerNavigation.njk' %}
      <p>&copy; {% year %} Declan Byrd</p>
      {% include 'partials/socialLinks.njk' %}
      <script type="text/javascript" src="/assets/scripts/main.js" defer></script>
      {% block scripts %}
        {{ content | safe }}
      {% endblock %}
      <a class="h-card hidden-metadata" rel="me" href="https://declanbyrd.co.uk/">Declan Byrd</a>
    </footer>
  </body>
</html>