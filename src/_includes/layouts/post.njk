{% extends 'layouts/page.njk' %}

{% block content %}

  <article class="blog-post">
  <span class="data">
    {{ blogTopic }}
    <time class="date" datetime="{{ page.date | htmlDateTime }}">{{page.date | dateDisplay}}</time>
  </span>
  <h2 class="title">{{ title }}</h2>
  <aside class="post-tags">
    {% for tag in tags %} 
      {%- if collections.tagList.indexOf(tag) != -1 -%} 
      {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
        <span class="flex-icon">
          <svg width="20" height="20" role="img" aria-labelledby="{{tag}}labelTitle" focusable="false" class="icon label">
            <title id="{{tag}}labelTitle">Label</title>
            <use href="/assets/icons/icons.svg#label"></use>
          </svg>
          <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
        </span>
      {%- endif -%} 
    {% endfor %}
  </aside>
  
    {{ content | safe }}
  </article>

{% endblock %}
