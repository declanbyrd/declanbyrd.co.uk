{% extends 'layouts/base.njk' %}

{% block content %}
  <style>
    {% include "css/syntax.css" %}
  </style>
  <article class="[ markdown-container ]">
    <span class="data">
      {{ blogTopic }}
      <time class="[ invert ] [ date ]" datetime="{{ page.date | htmlDateTime }}">{{page.date | dateDisplay}}</time>
    </span>
    <h2 class="[ post-title ]">{{ title }}</h2>
    <ul class="[ horizontal-list ]">
      {% for tag in tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
          {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
          <li class="[ tag ]">
            <svg width="20" height="20" role="img" aria-labelledby="{{tag}}labelTitle" focusable="false" class="icon label">
              <title id="{{tag}}labelTitle">Label</title>
              <use href="/assets/icons/icons.svg#label"></use>
            </svg>
            <a href="{{ tagUrl | url }}" class="[ hover-link ] [ invert ]">{{ tag }}</a>
          </li>
        {%- endif -%}
      {% endfor %}
    </ul>

    {{ content | safe }}
  </article>

{% endblock %}