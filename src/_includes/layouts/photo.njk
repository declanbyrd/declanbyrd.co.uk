{% extends 'layouts/base.njk' %}

{% block stylesheets %}

  {% set css %}
  {% include "css/photos.css" %}
  {% include "css/markdown.css" %}
  {% endset %}
  <style>
    {{css | cssmin | safe}}
  </style>
{% endblock %}

{% block content %}

  <section>
    <article>
      <div class="[ flex-row ]">
        <h2>Photos</h2>
        <time class="[ date ]" datetime="{{ page.date | htmlDateTime }}">{{page.date | readableDates}}</time>
      </div>
      {{ content | safe }}
      {% for item in photo %}
        {% image item.url, item.alt, "[ large-photo ]" %}
      {% endfor %}

    </article>

  </section>
  {% set webmentionUrl %}{{ page.url | url | absoluteUrl(site.url) }}{% endset %}
  {% include 'partials/webmentions.njk' %}

  <section>
    {% set previousPost = collections.photos | reverse | getPreviousCollectionItem(page) %}
    {% set nextPost = collections.photos | reverse | getNextCollectionItem(page) %}
    <nav aria-label="Photo Navigation">
      <ul class="[ horizontal-links more-reading ]">
        {% if previousPost %}
          <li class="previous">
            <p>Previous Entry:</p>
            <a href="{{ previousPost.url }}">{{ previousPost.data.date | readableDates }}</a>
          </li>
        {% endif %}
        {% if nextPost %}
          <li class="next">
            <p>Next Entry:</p>
            <a href="{{ nextPost.url }}">{{ nextPost.data.date | readableDates }}</a>
          </li>
        {% endif %}
      </ul>
    </nav>
  </section>

{% endblock %}

{% block scripts %}{% endblock %}