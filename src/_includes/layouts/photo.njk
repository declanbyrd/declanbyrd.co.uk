{% extends 'layouts/base.njk' %}

{% block content %}

<article>
  <div class="[ flex-row ]">
    <h1>
      <a href="/photos">
        Photos
      </a>
    </h1>
    <time class="[ invert ]" datetime="{{ page.date | htmlDateTime }}">{{page.date | dateDisplay}}</time>
  </div>
  {{ content | safe }}
  {% for item in photo %}
  <img src="{{item.url}}?nf_resize=fit&amp;h=600" alt="{{item.alt}}" class="[ large-photo ]">
  {% endfor %}
</article>

{% endblock %}