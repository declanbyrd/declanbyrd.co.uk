{% extends 'layouts/base.njk' %}

{% block content %}

  <section>
    <article class="[ indent-left ]">
      <div class="[ flex-row ]">
        <h2>Photos</h2>
        <time class="[ date ]" datetime="{{ page.date | htmlDateTime }}">{{page.date | readableDates}}</time>
      </div>
      {{ content | safe }}
      {% for item in photo %}
        <img class="[ large-photo ]" src="{{item.url}}" alt="{{item.alt}}">
      {% endfor %}
      <button class='[ return-button ]'>
        <a href=" /photos">&larr; Return to the photos page</a>
      </button>
    </article>
  </section>

{% endblock %}