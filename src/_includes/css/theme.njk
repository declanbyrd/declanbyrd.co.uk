:root {
  {# Light theme variables by default #}
  {% for token, value in tokens.themes.light %}
    --{{token}}: {{value}};
  {% endfor %}


  {# Font variables #}
  --body-font: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
    Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

  --heading-font: 'Bungee', var(--body-font);

  {# typography variables #}
  {% for token, value in tokens.typography %}
    --{{token}}: {{value}};
  {% endfor %}

  {# fluid spacing variables #}
  {% for token, value in tokens.spacing %}
    --{{token}}: {{value}};
  {% endfor %}
  
  {# set properties to default variable values #}
  background: var(--background);
  color: var(--text-color);
  font-family: var(--body-font);
  transition: background 300ms ease-in-out, color 300ms ease-in-out;
}


@media (prefers-color-scheme: dark) {
  html {
    {% for token, value in tokens.themes.dark %}
      --{{token}}: {{value}};
    {% endfor %}
  }

  [data-user-color-scheme='light'] {
    {% for token, value in tokens.themes.light %}
      --{{token}}: {{value}};
    {% endfor %}
  }

  [data-user-color-scheme='jaffaCake'] {
    {% for token, value in tokens.themes.jaffaCake %}
      --{{token}}: {{value}};
    {% endfor %}
  }

  html:not([data-user-color-scheme]) {
    {% for token, value in tokens.themes.dark %}
      --{{token}}: {{value}};
    {% endfor %}
  }
}

[data-user-color-scheme='dark'] {
  {% for token, value in tokens.themes.dark %}
    --{{token}}: {{value}};
  {% endfor %}
}

[data-user-color-scheme='jaffaCake'] {
  {% for token, value in tokens.themes.jaffaCake %}
    --{{token}}: {{value}};
   {% endfor %}
}