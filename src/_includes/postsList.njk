{% for post in postslist %}
  <article class="[ journal-preview ]">
    <header class="[ flex-row ]">
      <h3>
        <a href="{{ post.url | url }}">
          {{ post.data.title }}
        </a>
      </h3>
        <time datetime="{{ post.date | htmlDateTime }}" class="[ date ]">
          {{ post.date | dateDisplay }}
        </time>
    </header>
    <p>
      {{ post.data.description }}
    </p>
    <footer>
      <ul class="[ horizontal-list ]">
        {% for tag in post.data.tags %}
          {%- if collections.tagList.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
            <li class="[ tag ]">
              <svg width="20" height="20" role="img" aria-labelledby="{{tag | slug}}LabelTitle" focusable="false">
                <title id="{{tag | slug}}LabelTitle">Label</title>
                <use href="/assets/icons/icons.svg#label"></use>
              </svg>
              <a href="{{ tagUrl | url }}" class="[ hover-link ]">{{ tag }}</a>
            </li>
          {%- endif -%}
        {% endfor %}
      </ul>
    </footer>
  </article>
{% endfor %}