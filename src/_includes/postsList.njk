<ul class="journal">
  {% for post in postslist %}
  <li class="[ journal-preview ]">
    <time datetime="{{ post.date | htmlDateTime }}" class="[ date ]">
      {{ post.date | dateDisplay }}
    </time>
    <div>
      <h3>
        <a href="{{ post.url | url }}">
          {{ post.data.title }}
        </a>
      </h3>
      <ul class="[ horizontal-list ]">
        {% for tag in post.data.tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
        <li class="[ tag ]">
          <svg width="20" height="20" role="img" aria-labelledby="{{tag | slug}}LabelTitle" focusable="false">
            <title id="{{tag | slug}}LabelTitle">Label</title>
            <use href="/assets/icons/icons.svg#label"></use>
          </svg>
          <a href="{{ tagUrl | url }}" class="[ hover-link ]">{{ tag }}</a>
        </li>
        {%- endif -%}
        {% endfor %}
      </ul>
    </div>
  </li>
  {% endfor %}
</ul>