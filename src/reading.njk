---
title: Reading
description: "Books that I've been reading, ordered by the date I read them."
eleventyComputed:
  eleventyNavigation:
    key: "{{ title }}"
    description: "{{ description }}"
---

{% extends 'layouts/base.njk' %}

{% block stylesheets %}

  {% set css %}
  {% include "css/books.css" %}
  {% endset %}
  <style>
    {{css | cssmin | safe}}
  </style>
{% endblock %}

{% block content %}
  <section>
    <h1>{{ title }}</h1>
    <div>
      <h2 id="currentlyReading">Currently reading</h2>
      <div class="book-container now-reading">
        {% bookCover now.reading %}
        <div>
          <p class="book-title">{{now.reading.title}}</p>
          <p>by {{now.reading.authors}}</p>
          <p>{{now.reading.pageCount}} pages</p>
        </div>
      </div>
    </div>
    {% for year, booksInYear in collections.books %}
      <h2 id="{{year}}">{{year}}</h2>
      <ul class="[ bookshelf ]">
        {% for book in booksInYear %}
          <li>
            <a href="/reading/{{book.data.isbn}}/" class="book-container preview">
              {% bookCover book.data.book %}
              <span class="[ visually-hidden ]">
              Read Declan's notes for {{book.data.book.title}} by {{book.data.book.authors}}
              </span>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endfor %}
  </section>
{% endblock %}