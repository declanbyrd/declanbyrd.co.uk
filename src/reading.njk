---
title: Reading
description: "Books that I've been reading, ordered by the date I read them."
eleventyComputed:
  eleventyNavigation:
    key: "{{ title }}"
    description: "{{ description }}"
---

{% extends 'layouts/base.njk' %}

{% block stylesheets %}

  {% set css %}
  {% include "css/books.css" %}
  {% endset %}
  <style>
    {{css | cssmin | safe}}
  </style>
{% endblock %}

{% block content %}
  <section>
    <h1>{{ title }}</h1>
    <div>
      <h2 id="currentlyReading">Currently reading</h2>
      {% include 'partials/nowReadingWidget.njk' %}
    </div>
    {% for year, booksInYear in collections.books | reverse %}
      <h2 id="{{year}}">{{year}}</h2>
      <ul class="[ bookshelf ]">
        {% for book in booksInYear | reverse %}
          <li>
            <a href="/reading/{{book.data.isbn}}/" class="book-container preview">
              {% cloudImage book.data.book.thumbnail,
              "" %}
              <span class="[ visually-hidden ]">
              Read Declan's notes for {{book.data.book.title}} by {{book.data.book.authors}}
              </span>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endfor %}
  </section>
{% endblock %}