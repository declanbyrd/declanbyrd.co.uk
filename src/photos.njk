---
title: Photos
description: Photos I've taken!
eleventyNavigation:
  key: Photos
  order: 3
---

{% extends 'layouts/base.njk' %}

{% block content %}
<h2 class="page-title">{{ title }}</h2>
<ul class="[ autofit-grid ] [ photos ]">
  {% for item in collections.photos %}
  <li>
    <a href="{{item.url}}">

      <picture class="[ photo-container ]">
        <img loading="lazy" src="{{ item.data.photo[0].url }}"
          alt="{{ item.data.photo[0].alt }}" class="[ photo-item ]" />
      </picture>
      {% if item.data.photo.length > 1 %}
      <svg width="30" height="30" role="img" aria-labelledby="{{item.url}}Title" focusable="false"
        class="[ gallery-icon ]">
        <title id="{{item.url}}Title">Gallery</title>
        <use href="/assets/icons/icons.svg#gallery"></use>
      </svg>
      {% endif %}
      <span class="[ visual-hidden ]">View the photo of {{item.data.photo[0].alt}}</span>
    </a>
  </li>
  {% endfor %}
</ul>
{% endblock %}