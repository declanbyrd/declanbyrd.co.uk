---
title: Photos
description: Declan Byrd's photos.
eleventyNavigation:
  key: Photos
  order: 3
---

{% extends 'layouts/base.njk' %}

{% block content %}
<section class="full-width">
  <h2>My <span class="accent">{{title}}</span></h2>
  <ul class="[ autofit-grid ] [ photos ]">
    {% for item in collections.photos %}
    <li>
      <a href="{{item.url}}">
        {% image item.data.photo[0].url, item.data.photo[0].alt, "[ photo-item ]"  %}
        {% if item.data.photo.length > 1 %}
        <svg width="30" height="30" role="img" aria-labelledby="{{item.url}}Title" focusable="false"
          class="[ gallery-icon ]">
          <title id="{{item.url}}Title">Gallery</title>
          <use href="/assets/icons/icons.svg#gallery"></use>
        </svg>
        {% endif %}
        <span class="[ visually-hidden ]">View the photo of {{item.data.photo[0].alt}}</span>
      </a>
    </li>
    {% endfor %}
  </ul>
</section>
{% endblock %}